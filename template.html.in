<?xml version="1.0" encoding="EUC-JP"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ja" xml:lang="ja">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=EUC-JP" />
<link rev="made" href="mailto:masao@nii.ac.jp" />
<link rel="stylesheet" href="<%= css %>" type="text/css" />
<title><%= title %></title>
</head>
<body>
<% if not navi == "false" %>
<div id="navi"><a href="./">HOME</a> &gt;&gt;
<% subject.to_a.each do |category| %>
<%   label = conf["subject_label"][category] || category %>
<a href="<%= conf["basedir"]%>/<%= category %>/"><%= label %></a>
<% end %>
<%= "&gt;&gt;" unless subject.to_a.empty? %>
<% end %>
</div>
<% if date_available %>
<div class="last-update">初版公開日: <%= date_available.strftime("%Y年%m月%d日") %></div>
<% end %>
<% if date_modified %>
<div class="last-update">最終更新日: <%= date_modified.strftime("%Y年%m月%d日") %></div>
<% end %>
<h1><%= title %></h1>
<%= body %>
<hr />
<address>高久雅生 (Takaku Masao)<br />
<a href="http://masao.jpn.org/">http://masao.jpn.org/</a>,
<a href="mailto:masao@nii.ac.jp">masao@nii.ac.jp</a></address>
</body>
</html>
