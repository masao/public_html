</TMPL_LOOP>
<p>last update: <TMPL_VAR name=lastupdate></p>
<TMPL_VAR name=signature>
</div></body></html>
TMPL
    ;

# item のテンプレート
my $item_template = << "EACHITEM"
<!-- start:<TMPL_VAR name=ymdi> -->
