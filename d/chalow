## デフォルト設定 (ユーザ設定ファイル名が指定されてないとき)
# 日記の名前
my $changelog_name = "ChangeLog";
# 自動文字列置換
my $auto_replace = '
s!(<blockquote>)!</p>$1<p>!g;
s!(</blockquote>)!</p>$1<p>!g;
';
# CSS ファイル
my $css_file;
# RSSファイル名
